{
  "name": "slack-sdk-suburi",
  "description": "Sandbox for Slack development",
  "author": {
    "name": "grgr-dkrk"
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "compile:lambda": "rm -rf ./dist && tsc -p ./tsconfig.lambda.json && cp -f ./package.json ./yarn.lock ./dist && cd dist && sh ../scripts/deployToLambda.sh && cd ../",
    "type-check": "tsc --noEmit",
    "lint": "eslint ./src",
    "lint:secret": "secretlint **/*",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-slack": "^2.1.0",
    "@types/dotenv": "^8.2.0",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^26.0.4",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "secretlint": "^2.1.0",
    "ts-jest": "^26.1.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@slack/bolt": "^2.1.1",
    "@slack/web-api": "^5.10.0",
    "dotenv": "^8.2.0",
    "inquirer": "^7.3.2",
    "minimist": "^1.2.5",
    "ts-node": "^8.10.2"
  }
