{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2018", "dom"],
    "allowJs": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules", "./src/specs/**/*"]
}
